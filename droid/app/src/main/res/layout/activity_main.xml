<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="ADD TO CART"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:textSize="@dimen/VAR_FONT_SIZE_6"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="@dimen/VAR_SPACING_QUITE_SMALL" android:paddingBottom="@dimen/VAR_SPACING_QUITE_SMALL"
            android:shadowRadius="0" android:shadowColor="#00FFFFFF" android:background="@color/COLOR_BACKGROUND_GRAY_1"
            android:textColor="@color/COLOR_TEXT_WHITE" android:fontFamily="@font/open_sans_bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>